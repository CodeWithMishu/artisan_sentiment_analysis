# HP Artisan Intelligence System Configuration
# Copy this file to .env and fill in your values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=hp_artisan_intelligence

# Application Settings
SECRET_KEY=hp-government-secret-key-2025
FLASK_ENV=production
DEBUG=False

# Data Collection Mode
# Options: simulation, twitter, mixed
DATA_MODE=simulation

# Twitter API Credentials (Optional - leave blank for simulation mode)
# Get these from https://developer.twitter.com/
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Instagram API (Optional)
INSTAGRAM_ACCESS_TOKEN=

# Facebook API (Optional)
FACEBOOK_ACCESS_TOKEN=

# Government Compliance Settings
REPORT_RETENTION_DAYS=365
AUDIT_LOGGING=True
PRIVACY_MODE=True
ENCRYPTED_STORAGE=True

# Email Settings (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
ADMIN_EMAIL=hp-admin@gov.in

# System Settings
MAX_POSTS_PER_DISTRICT=500
ANALYSIS_FREQUENCY_HOURS=24
CACHE_TIMEOUT_MINUTES=30

# Performance Settings
WORKER_PROCESSES=2
MAX_MEMORY_MB=512
REQUEST_TIMEOUT_SECONDS=30
